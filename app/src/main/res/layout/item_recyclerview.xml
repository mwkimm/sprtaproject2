<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    />

    <ImageView
        android:id="@+id/iconItem"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:padding="@dimen/icon_padding"
        android:layout_gravity="center_vertical"
        android:src="@drawable/sample_0"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/text_Item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size1"
            android:padding="@dimen/list_item_padding"
            android:hint="Product"
            />

        <TextView
            android:id="@+id/textItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size2"
            android:padding="@dimen/list_item_padding"
            android:hint="Address"
            />

        <TextView
            android:id="@+id/textItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size2"
            android:padding="@dimen/list_item_padding"
            android:hint="price"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            > <!-- 내부 LinearLayout을 horizontal로 설정하여 이미지뷰들을 가로로 배치 -->

            <ImageView
            android:id="@+id/iconItem2"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:padding="@dimen/list_item_padding"
            android:src="@drawable/heart"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size2"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            />

            <TextView
                android:id="@+id/textItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/list_item_text_size2"
                android:padding="@dimen/list_item_padding"
                android:hint="good"
                />

        <ImageView
            android:id="@+id/iconItem3"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:padding="@dimen/list_item_padding"
            android:src="@drawable/heart"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_text_size2"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            />

            <TextView
                android:id="@+id/textItem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/list_item_text_size2"
                android:padding="@dimen/list_item_padding"
                android:hint="chat"
                />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>